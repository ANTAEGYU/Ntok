<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/default_dialog_rounded"
    android:padding="@dimen/_10sdp">



    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:text="Title"
        style="@style/setting_frame_style"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/dialog_title_description"
        android:layout_width="wrap_content"
        android:gravity="center"
        style="@style/setting_frame_style"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@id/dialog_title"
        android:alpha=".8"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Title Description" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_below="@id/dialog_title_description"
        android:background="@color/settings_background_color_primary"
        android:layout_height="@dimen/_2sdp"/>

    <ListView
        android:id="@+id/option_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/settings_background_color_primary"
        android:dividerHeight="@dimen/_2sdp"
        android:layout_below="@id/view"

       />

</RelativeLayout>